<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".PaymentActivity">
    <include
        layout="@layout/tool_bar"
        android:id="@+id/toolbar1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar1"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:text="Choose Mode of Payment: "
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@+id/toolbar1"
        android:layout_marginTop="55dp"
        android:id="@+id/lLayoutBtn"
        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit/Debit Card"
            android:background="#3d67a7"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:id="@+id/btnCreditCard"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Banking"
            android:background="#3d67a7"
            android:textColor="#ffffff"
            android:id="@+id/btnNetBanking"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fLayout1"
        android:layout_below="@+id/lLayoutBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fLayout2"
        android:layout_below="@+id/fLayout1"/>

</RelativeLayout>






</ScrollView>
